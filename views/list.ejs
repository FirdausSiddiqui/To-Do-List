<%- include("header"); -%>

    <div class="box " id="heading">
        <h1 style="color:blue"><%= dayName %> TODO List! </h1>
    </div>
    <div class="box">
        <% for(i=0;i<newItem.length;i++){ %>
        <div class="item">
             <input type="checkbox" >
             <p><%= newItem[i] %></p>
        </div>
          <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="itemName" placeholder="Add New item" autocomplete="off">
        <button type="submit" name="button" value="<%= dayName %>">+</button>
        </form>

    </div>

<%- include("footer") -%>
